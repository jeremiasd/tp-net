<Window x:Class="Academia.Escritorio.ABM_Especialidades"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ABM_Especialidades" Height="153.41" Width="423" Background="WhiteSmoke" WindowStartupLocation="CenterScreen">
    <Grid Height="117">
        
        <TextBox Height="23" Margin="131,7,175,0" Name="txtIdEspecialidad" VerticalAlignment="Top" IsEnabled="False" Text="{Binding Id_especialidad, Mode=TwoWay, Path=Id_especialidad}" DataContext="{Binding}" IsReadOnly="True" />
        <TextBox Margin="131,41,27,0" Name="txtDescEspecialidad" Height="23" VerticalAlignment="Top" Text="{Binding Path=Desc_especialidad, Mode=TwoWay}"/>
        
        <Label Height="28" HorizontalAlignment="Left" Margin="47,7,0,0" Name="label1" VerticalAlignment="Top" Width="120">Id Especialidad</Label>
        <Label HorizontalAlignment="Left" Margin="19,41,0,0" Name="label2" Width="120" Height="28" VerticalAlignment="Top">Nombre Especialidad</Label>
        <Button HorizontalAlignment="Right" Margin="0,82.708,27,0" Name="btnCancelar" Width="75" Height="22.879" VerticalAlignment="Top" Click="btnCancelar_Click">Cancelar</Button>
        <Button HorizontalAlignment="Right" Margin="0,82.708,111.389,0" Name="btnAgregar" Width="75" Height="22.879" VerticalAlignment="Top" Click="btnAgregar_Click">Agregar</Button>
        
    </Grid>
</Window>
